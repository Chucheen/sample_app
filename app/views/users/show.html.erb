<% provide(title: @user.name)   %>
<div class="row">
  <aside class = "span4">
    <section>
      <h1>
        <%= gravatar_for @user, size:40 %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.microposts.any? %>
        <h3>Microposts <%= @user.microposts.count %></h3>
        <ol>
          <%= render @user.microposts %>
        </ol>
        <%= will_paginate @user.microposts %>
    <% end %>
  </div>
</div>


