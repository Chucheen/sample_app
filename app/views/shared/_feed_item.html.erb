<li id="<%= feed_item.id %>" style="min-height: 60px">
    <%= link_to gravatar_for(feed_item.user), feed_item.user %>
    <span class="user">
        <%= link_to feed_item.user.name, feed_item.user %>
    </span>
    <span class="content"><%= wrap_long_words(feed_item.content) %></span>
    <span class="timestamp">
        Posted <%= time_ago_in_words(feed_item.created_at) %> ago. |
    </span>
    <% if current_user? feed_item.user %>
        <%= link_to 'Delete', feed_item, method: :delete, confirmation: 'you sure?', title: feed_item.content %>
    <% end %>
</li>